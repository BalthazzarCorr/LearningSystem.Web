@model IEnumerable<CourseListingServiceModel>
@{
    ViewData["Title"] = "Active Courses";
}

<div class="jumbotron text-center">
    <h1>Welcome to our learning system </h1>
    <canvas id="frame">Canvas not supported by your browser</canvas>
</div>

<div class="row home-page">
    @foreach (var course in Model)
    {
        <div class="col-md-4">
            <div class="panel-heading">
                <h3 class="panel-title">@course.Name</h3>
            </div>
            <div class="panel-body">
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id"><img src="http://thecatapi.com/api/images/get?format=src&type=gif&guid=@(Guid.NewGuid())" class="img-responsive" ></a>
                @course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()
            </div>
        </div>
    }
</div>